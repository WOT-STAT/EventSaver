{
  "name": "eventsaverbun",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev:docker": "docker compose down; docker compose up --build",
    "dev": "bun run --watch src/index.ts",
    "run": "bun run src/index.ts",
    "migrate": "bun src/db/migrate.ts",
    "rollback": "bun src/db/rollback.ts",
    "generateJsonSchema": "bunx ts-json-schema-generator --no-type-check --additional-properties true --path ./src/types/events.ts --out ./src/types/types.json"
  },
  "dependencies": {
    "@clickhouse/client-web": "^1.7.0",
    "ajv": "^8.17.1",
    "fast-jwt": "^4.0.5",
    "hono": "^4.6.6",
    "node-cron": "^3.0.3",
    "redis": "^4.7.0",
    "uuid": "^10.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.12",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "@types/xml2js": "^0.4.14"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  }
}
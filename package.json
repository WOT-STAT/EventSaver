{
  "name": "eventsaverbun",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev:docker": "docker compose down; docker compose up --build",
    "dev": "bun run --watch src/index.ts",
    "run": "bun run src/index.ts",
    "migrate": "bun src/db/migrate.ts",
    "rollback": "bun src/db/rollback.ts",
    "generateJsonSchema": "bunx ts-json-schema-generator --additional-properties true --path ./src/types/events.ts --out ./src/types/types.json"
  },
  "dependencies": {
    "@clickhouse/client-web": "^0.2.8",
    "ajv": "^8.12.0",
    "fast-jwt": "^4.0.0",
    "hono": "^3.12.5",
    "node-cron": "^3.0.3",
    "redis": "^4.6.12",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^9.0.7"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}